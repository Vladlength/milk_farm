  </padding>
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #2E8B57;">
         <children>
            <AnchorPane layoutY="70.0" prefHeight="313.0" prefWidth="700.0" style="-fx-background-color: #F0FFFF;">
               <children>
                  <TextField fx:id="login_field" alignment="CENTER" layoutX="173.0" layoutY="68.0" prefHeight="39.0" prefWidth="354.0" promptText="Табельный номер">
                     <font>
                        <Font name="Sitka Banner Bold Italic" size="18.0" />
                     </font>
                  </TextField>
                  <PasswordField fx:id="password_field" alignment="CENTER" layoutX="173.0" layoutY="133.0" prefHeight="39.0" prefWidth="354.0" promptText="Пароль">
                     <font>
                        <Font name="Sitka Banner Bold Italic" size="18.0" />
                     </font>
                  </PasswordField>
                  <Button fx:id="EnterButton" layoutX="261.0" layoutY="207.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="179.0" style="-fx-background-color: LightSkyBlue;" text="Войти" textFill="WHITE">
                     <font>
                        <Font name="Sitka Banner Bold Italic" size="17.0" />
                     </font>
                  </Button>
               </children></AnchorPane>
            <Label layoutX="216.0" layoutY="6.0" prefHeight="89.0" prefWidth="242.0" text="Молочная Ферма" textFill="#ebebeb">
               <font>
                  <Font name="Sitka Banner Bold Italic" size="32.0" />
               </font>
            </Label>
            <Button fx:id="SignUp" layoutX="507.0" layoutY="14.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="179.0" style="-fx-background-color: LightSkyBlue;" text="Регистрация" textFill="WHITE">
               <font>
                  <Font name="Sitka Banner Bold Italic" size="17.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</VBox>
