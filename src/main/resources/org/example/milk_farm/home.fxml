        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #2E8B57;">
            <children>
                <AnchorPane layoutY="87.0" prefHeight="313.0" prefWidth="700.0" style="-fx-background-color: #F0FFFF;">
               <children>
                  <TextField fx:id="id_animal" alignment="CENTER" layoutX="173.0" layoutY="24.0" prefHeight="39.0" prefWidth="354.0" promptText="id животного">
                     <font>
                        <Font name="Sitka Banner Bold Italic" size="18.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="kind_animal" alignment="CENTER" layoutX="173.0" layoutY="81.0" prefHeight="39.0" prefWidth="354.0" promptText="вид животного">
                     <font>
                        <Font name="Sitka Banner Bold Italic" size="18.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="fat_content" alignment="CENTER" layoutX="173.0" layoutY="137.0" prefHeight="39.0" prefWidth="354.0" promptText="жирность">
                     <font>
                        <Font name="Sitka Banner Bold Italic" size="18.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="volume" alignment="CENTER" layoutX="173.0" layoutY="195.0" prefHeight="39.0" prefWidth="354.0" promptText="объем ">
